<h1 align="center">All Alpha Bloggers</h1>

<div class="d-flex justify-content-center">
  <%= will_paginate %>
</div>

<% @users.each do |user| %>
  <ul class="listing">
    <div class="row">
      <div class="card card-body bg-light col-md-4 offset-4">
        <li><%= link_to image_tag(user.profile_image.url, size: "100x100", class: "rounded-circle"), user_path(user) if user.profile_image? %></li>
        <li class="article-title">
          <%= link_to user.name, user_path(user) %>
        </li>
        <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
        <% if logged_in? and current_user.admin? %>
          <li><%= link_to "Delete this user", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete the user and all their articles?" } %></li>
        <% end %>
      </div>
    </div>
  </ul>
<% end %>

<div class="d-flex justify-content-center">
  <%= will_paginate %>
</div>