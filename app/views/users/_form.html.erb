<%= render 'shared/errors', obj: @user %>

<div class='row'>
  <div class='col-md-12'>
    <%= form_with(model: user, local: true, multipart: true) do |form| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :name %>
        </div>
        <div class="col-sm-8">
          <%= form.text_field :name, class: "form-control", placeholder: "Enter name", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :email %>
        </div>
        <div class="col-sm-8">
          <%= form.email_field :email, class: "form-control", placeholder: "Enter email" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :password %>
        </div>
        <div class="col-sm-8">
          <%= form.password_field :password, class: "form-control", placeholder: "Enter password", autocomplete: "off" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :profile_image %>
        </div>
        <div class="col-sm-8">
          <%= form.file_field :profile_image, accept: 'image/jpeg,image/gif,image/png' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit "Sign up", class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $('#user_profile_image').on('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB.');
      $(this).val('');
    }
  });
</script>